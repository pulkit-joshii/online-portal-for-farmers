<h1>Lands</h1>

<table>
  <thead>
    <tr>
      <th>Surveyno</th>
      <th>Area</th>
      <th>Village</th>
      <th>Agrioffice</th>
      <th>District</th>
      <th>Ownershiptype</th>
      <%# <th>ID</th> %>
      <%# <th>Approval</th> %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% Land.all.each do |land| %>
      <% if land.approved? %>
        <tr>
          <td><%= land.surveyno %></td>
          <td><%= land.area %></td>
          <td><%= land.village %></td>
          <td><%= land.agrioffice %></td>
          <td><%= land.district %></td>
          <td><%= land.ownershiptype %></td>
          <td><%= link_to 'Approve', approve_land_path(id: land.id) %></td>
          land.approved = false
        </tr>
      <% else %>
        <tr>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

