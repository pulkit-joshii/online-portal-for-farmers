<body class="sub_page">
  <div class="hero_area">
    <!-- header section strats -->
    <header class="header_section">
      <nav class="navbar navbar-expand-lg custom_nav-container">
        <div class="custom_menu-btn">
          <button onclick="openNav()">
            <span class="s-1"> </span>
            <span class="s-2"> </span>
            <span class="s-3"> </span>
          </button>
        </div>
        <div id="myNav" class="overlay">
          <div class="menu_btn-style ">
            <button onclick="closeNav()">
              <span class="s-1"> </span>
              <span class="s-2"> </span>
              <span class="s-3"> </span>
            </button>
          </div>
          <div class="overlay-content">
            <a class="" href="officer.html">
                Home
              </a>
              
              <a class="active" href="servicesO.html">
                Services
              </a>
              
              <a class="" href="Contact_us.html">
                Contact Us
              </a>
            </div>
          </div>
          <a class="navbar-brand" href="officer.html">
            <span>
              E-Farmer
            </span>
            </a>
        <div class="user_option">
          
        </div>
      </nav>
    </header>
    <!-- end header section -->
  </div>

  <!-- we do section -->

  <section class="crops_section layout_padding section_pr">
    <div class="container">
      <div class="heading_container">
        <h2><span>List Of </span> Lands</h2>
      </div>
     
    
      <table class=" table table-light table-striped"  >
      <thead  class="table-dark">
        <tr>
            <th>Survey Number</th>
            <th>Area(sq ft)</th>
            <th>Village</th>
            <th>Agriculture Office</th>
            <th>District</th>
            <th>Ownership Type</th>
            <th>Approval</th>
        </tr>
        </thead>
        <tbody>
        <% Land.all.each do |land| %>
          <% if land.approved? %>
            <tr>
              <td><%= land.surveyno %></td>
              <td><%= land.area %></td>
              <td><%= land.village %></td>
              <td><%= land.agrioffice %></td>
              <td><%= land.district %></td>
              <td><%= land.ownershiptype %></td>
              <td><%= link_to 'Approve', approve_land_path(id: land.id),class:"btn btn-success" %></td>
              <% land.approved = false%>
            </tr>
          <% else %>
            <tr>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
</div>
  </section>

  <!-- end we do section -->
  <br>

