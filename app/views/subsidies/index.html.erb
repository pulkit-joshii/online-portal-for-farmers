<body class="sub_page">
  <div class="hero_area">
    <!-- header section strats -->
    <header class="header_section">
      <nav class="navbar navbar-expand-lg custom_nav-container">
        <div class="custom_menu-btn">
          <button onclick="openNav()">
            <span class="s-1"> </span>
            <span class="s-2"> </span>
            <span class="s-3"> </span>
          </button>
        </div>
        <div id="myNav" class="overlay">
          <div class="menu_btn-style ">
            <button onclick="closeNav()">
              <span class="s-1"> </span>
              <span class="s-2"> </span>
              <span class="s-3"> </span>
            </button>
          </div>
          <div class="overlay-content">
            <a class="" href="farmer.html">
                Home
              </a>
             
              <a class="active" href="servicesF.html">
                Services
              </a>
              
              <a class="" href="Contact_us.html">
                Contact Us
              </a>
            </div>
          </div>
          <a class="navbar-brand" href="Farmer.html">
            <span>
              E-Farmer
            </span>
            </a>
        <div class="user_option">
         
        </div>
      </nav>
    </header>
    <!-- end header section -->
  </div>

  <!-- we do section -->

  <section class="crops_section layout_padding section_pr">
    <div class="container">
      <div class="heading_container">
        <h2><span>List Of</span> Subsidies</h2>
      </div>
     
    
      <table class=" table table-light table-striped"  >
      <thead  class="table-dark">
        <tr>
            <th>Survey Number</th>
            <th>Crop Name</th>
            <th>Amount</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
    <% @subsidies.each do |subsidy| %>
      <% if subsidy.farmer == current_farmer %>
        <tr>
          <td><%= subsidy.surveyno %></td>
          <td><%= subsidy.cropname %></td>
          <td><%= subsidy.amount %></td>
          <td><%= link_to 'Show', subsidy,class:"btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_subsidy_path(subsidy),class:"btn btn-primary" %></td>
          <td><%= link_to 'Destroy', subsidy, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%=link_to 'New Subsidy', new_subsidy_path,class:"btn btn-success" %>

<br>
    
</div>
  </section>

