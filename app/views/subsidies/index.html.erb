<h1>Subsidies</h1>

<table>
  <thead>
    <tr>
      <th>Surveyno</th>
      <th>Cropname</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subsidies.each do |subsidy| %>
      <% if subsidy.farmer == current_farmer %>
        <tr>
          <td><%= subsidy.surveyno %></td>
          <td><%= subsidy.cropname %></td>
          <td><%= subsidy.amount %></td>
          <td><%= link_to 'Show', subsidy %></td>
          <td><%= link_to 'Edit', edit_subsidy_path(subsidy) %></td>
          <td><%= link_to 'Destroy', subsidy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subsidy', new_subsidy_path %>

