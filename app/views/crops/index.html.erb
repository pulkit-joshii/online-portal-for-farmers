  <!-- we do section -->

  <section class="crops_section layout_padding section_pr">
    <div class="container">
      <div class="heading_container">
        <h2><span>List Of</span> Crops</h2>
      </div>
     
    
      <table class=" table table-light table-striped"  >
      <thead  class="table-dark">
        <tr>
          <th>Surveyno</th>
          <th>Name</th>
          <th>Area</th>
          <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
    <% @crops.each do |crop| %>
      <% if crop.farmer == current_farmer %>
        <tr>
          <td><%= crop.surveyno %></td>
          <td><%= crop.name %></td>
          <td><%= crop.area %></td>
          <td><%= link_to 'Show', crop,class:"btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_crop_path(crop),class:"btn btn-primary" %></td>
          <td><%= link_to 'Destroy', crop, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Crop', new_crop_path ,class:"btn btn-success" %>

