<h1>Crops</h1>

<table>
  <thead>
    <tr>
      <th>Surveyno</th>
      <th>Name</th>
      <th>Area</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% Crop.all.each do |crop| %>
      <% if crop.approved? %>
        <tr>
          <td><%= crop.surveyno %></td>
          <td><%= crop.name %></td>
          <td><%= crop.area %></td>
          <td><%= link_to 'Approve', approve_crop_path(id: crop.id) %></td>
          crop.approved = false
        </tr>
      <% else %>
        <tr>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

