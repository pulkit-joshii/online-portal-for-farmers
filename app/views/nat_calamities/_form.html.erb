            <span>
              E-Farmer
            </span>
            </a>
        <div class="user_option">
         
        </div>
      </nav>
    </header>
    <!-- end header section -->
  </div>

  <!-- contact section -->

  <section class="contact_section layout_padding section_pl ">
    <div class="container py_mobile_45">
      <div class="heading_container">
        <h2>Add New  <span> Natural Calamity</span></h2>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form_container">
          <%= form_with(model: nat_calamity) do |form| %>
            <% if nat_calamity.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(nat_calamity.errors.count, "error") %> prohibited this nat_calamity from being saved:</h2>
          
                <ul>
                  <% nat_calamity.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
              <h4 style="color:white;">Enter Natural Calamity Name</h4>
               <div class="field">              
               <%= form.text_field :name,placeholder:"Name" %>
               </div>
              
              <h4 style="color:white;">Enter Natural Calamity Type </h4>
                <div class="field">               
                <%= form.text_field :nctype,placeholder:"Type" %>
              </div>
             
              <h4 style="color:white;">Enter Month</h4>
              <div class="field">            
              <%= form.text_field :month,placeholder:"Month" %>
              </div>
              
            
              <h4 style="color:white;">Enter Year</h4>
              <div class="field">           
              <%= form.text_field :year ,placeholder:"Year"%>
              </div>
              <div class="d-flex ">
              <div class="actions">
                <button>
                  Add                  
                  <% form.submit %>
               
                </button>
               
                </div>
              </div>
              <% end %>
          </div>
        </div>
       
      </div>
    </div>
  </section>

  <!-- end contact section -->


  
