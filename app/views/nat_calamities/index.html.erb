      <div class="heading_container">
        <h2><span>List Of </span> Natural Calamities</h2>
      </div>
     
    
    <table class=" table table-light table-striped" >
    <thead class="table-dark" >
        <tr >
            <th>Namtural Calamity Name</th>
            <th>Type</th>
            <th>Month</th>
            <th>Year</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody >
    <% @nat_calamities.each do |nat_calamity| %>
      <tr  >
        <td><%= nat_calamity.name %></td>
        <td><%= nat_calamity.nctype %></td>
        <td><%= nat_calamity.month %></td>
        <td><%= nat_calamity.year %></td>
        <td><%= link_to 'Show', nat_calamity , class:"btn btn-primary"%></td>
        <td><%= link_to 'Edit', edit_nat_calamity_path(nat_calamity) ,class:"btn btn-primary"%></td>
        <td><%= link_to 'Destroy', nat_calamity, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

