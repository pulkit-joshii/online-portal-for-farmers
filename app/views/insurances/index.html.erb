<h1>Insurances</h1>

<table>
  <thead>
    <tr>
      <th>Surveyno</th>
      <th>Cropname</th>
      <th>Amount</th>
      <th>Rate</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @insurances.each do |insurance| %>
      <% if insurance.farmer == current_farmer %>
        <tr>
          <td><%= insurance.surveyno %></td>
          <td><%= insurance.cropname %></td>
          <td><%= insurance.amount %></td>
          <td><%= insurance.rate %></td>
          <td><%= insurance.year %></td>
          <td><%= link_to 'Show', insurance %></td>
          <td><%= link_to 'Edit', edit_insurance_path(insurance) %></td>
          <td><%= link_to 'Destroy', insurance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

